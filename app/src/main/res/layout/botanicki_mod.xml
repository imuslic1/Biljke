<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="3dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/slikaItem"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/default_img" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nazivItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/plantName"
                android:textAlignment="center"
                android:background="#B2F5AD"
                android:textColor="@android:color/black"
                android:textSize="14sp" /> <!-- TEXT SIZE MAYBE IZBACITI  -->

            <TextView
                android:id="@+id/porodicaItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:text = "@string/botanicFamily"
                android:textAlignment="center"
                android:textSize="14sp" />  <!-- TEXT SIZE MAYBE IZBACITI  -->

            <TextView
                android:id="@+id/klimatskiTipItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:text = "@string/botanicClimate"
                android:textAlignment="center"
                android:textSize="14sp" />  <!-- TEXT SIZE MAYBE IZBACITI  -->

            <TextView
                android:id="@+id/zemljisniTipItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:text = "@string/botanicSoilType"
                android:textAlignment="center"
                android:textSize="14sp" />  <!-- TEXT SIZE MAYBE IZBACITI  -->


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>